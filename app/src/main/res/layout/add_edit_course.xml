<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/add_edit_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".activities.intefaces.classroomInterface.AssignTeacherOrBatch">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="Department :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.49"
                android:padding="5dp"
                android:gravity="end|center_vertical"
                android:layout_margin="5dp"
                android:textSize="14sp" />

            <TextView
                android:text="CSE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_edit_course_departmentName"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textSize="14sp" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/add_edit_course_courseName"/>
        </android.support.design.widget.TextInputLayout>
        <!--<LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="Name :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="right|center_vertical"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textAutoCorrect"
                android:ems="10"
                android:id="@+id/add_edit_course_courseName"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp" />
        </LinearLayout>-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="No teacher assigned"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="start|center_vertical"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:id="@+id/add_edit_course_showTeacher" />

            <Button
                android:text="Assign Teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_edit_course_assignTeacher"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="normal|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:text="No Batch assigned"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="start|center_vertical"
                android:textSize="14sp"
                android:textStyle="normal|bold"
                android:id="@+id/add_edit_course_showBatch" />

            <Button
                android:text="Assign Batch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_edit_course_assignBatch"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <CheckBox
                android:text="Is Projector Required ?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_edit_course_projectorRequired"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp">

            <TextView
                android:text="No of Lectures per week :"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:gravity="end|center_vertical"
                android:textSize="14sp"
                android:textStyle="normal|bold" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/add_edit_course_numLectureSpinner"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_weight="0.07" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
